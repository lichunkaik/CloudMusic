<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/LinearLayout_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="30dp"
        android:background="#fff">

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/logo_close" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center"
                    android:text="歌曲名称" />

                <TextView
                    android:id="@+id/textView_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="艺术家" />

            </LinearLayout>

        </LinearLayout>

        <com.dongxun.lichunkai.cloudmusic.Class.CircleImageView
            android:id="@+id/imageView_coverImg"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:src="@drawable/coverimg" />


        <LinearLayout
            android:id="@+id/LinearLayout_Lycri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_firstLyric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#239dac"
                android:textStyle="bold"
                android:alpha="0.7"/>

            <TextView
                android:id="@+id/textView_secondLyric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:gravity="center"
                android:text="..." />

            <TextView
                android:id="@+id/textView_thirdLyric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:alpha="0.7"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:id="@+id/LinearLayout_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <TextView
                    android:id="@+id/textView_nowTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1:12" />

                <TextView
                    android:id="@+id/textView_sumTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="3:40" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView_lastSong"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/logo_last" />

            <ImageView
                android:id="@+id/imageView_playOrPause"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/logo_play"
                android:layout_marginHorizontal="10dp"/>

            <ImageView
                android:id="@+id/imageView_nextSong"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/logo_next" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/imageView_like"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/logo_like" />

            <ImageView
                android:id="@+id/imageView_loop"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/logo_loop_random" />

            <ImageView
                android:id="@+id/imageView_comments"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/logo_comments" />

            <ImageView
                android:id="@+id/imageView_list"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/logo_list" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
